<h3>{{headerTitle}} category</h3>

<section class='right'>
  {{#linkTo 'categories.index'}}Back{{/linkTo}}
</section>

<form>
  <div>
    <label {{bindAttr for="nameField.elementId"}}>Name</label>
    {{view Ember.TextField valueBinding='name' name='name' viewName='nameField'}}
  </div>
  <div>
    <label {{bindAttr for='priority.elementId'}}>Priority</label>
    {{view Ember.TextField valueBinding='priority' name='priority' viewName='priorityField'}}
  </div>

  <a href='#' {{action save}} class='button small'>{{buttonTitle}}</a>
  <a href='#' {{action cancel}} class='button small secondary'>Cancel</a>
</form>

